[core]
  autocrlf = input
  excludesfile = ~/.gitignore
	editor = /usr/bin/vim
[push]
	default = simple
[alias]
  unstage = reset -q HEAD --
  discard = checkout --
  nevermind = !git reset --hard HEAD && git clean -d -f
  uncommit = reset --mixed HEAD~
  undo = reset --mixed HEAD~
  tags = tag
  branches = branch -a
  stashes = stash list
  remotes = remote -v
  unstash = stash pop
  amend = commit --amend
  wip = !git add -A && git commit -m 'WIP' && echo 'Type `git undo` to undo this wip commit.'
  unwip = reset --mixed HEAD~
  standup = log --since yesterday --oneline --author $USER    
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  search = !git switch $(git branch | fzf)
  recent = !git switch $(git branch --sort=-committerdate | fzf)
[include]
  path = .gitconfig.personal
[includeIf "gitdir:~/src/work/"]
  path = .gitconfig.work
[commit]
	template = /Users/mike/.gitmessage
[user]
	name = Mike McClenaghan
	email = mike@sideline.ca
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
